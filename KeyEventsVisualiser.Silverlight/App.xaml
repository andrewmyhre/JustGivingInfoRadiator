<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="KeyEventsVisualiser.Silverlight.App"
             >
    <Application.Resources>
        <Style x:Key="MainMetricValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style x:Key="MainMetricType" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style x:Key="ExtraMetricInfo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style x:Key="ActiveSlide" TargetType="Rectangle">
            <Setter Property="Fill" Value="Navy" />
        </Style>
        <Style x:Key="InactiveSlide" TargetType="Rectangle">
            <Setter Property="Fill" Value="Gray" />
        </Style>
    </Application.Resources>
</Application>
